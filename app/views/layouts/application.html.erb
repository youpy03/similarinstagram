<!DOCTYPE html>
<html>
<head>
  <title>SimilarInsta</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
		<header>
		  <nav class="navbar navbar-default">
		    <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				        <span class="sr-only">Toggle navigation</span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
			      </button>
			      <%= link_to root_path, class: "navbar-brand" do%>
			      	<i class="fa fa-instagram fa-lg fa-fw text-change" aria-hidden="true"></i><i class="fa fa-lg fa-fw text-change" aria-hidden="true">SimilarINSTA</i>
			      <% end %>
		    </div>
		    <!-- Collect the nav links, forms, and other content for toggling -->
		      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		        <ul class="nav navbar-nav navbar-right">
			        <li class="dropdown">
			          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-bars fa-2x fa-fw text-change" aria-hidden="true"></i><span class="caret"></span></a>
			          <ul class="dropdown-menu">
			             <li><%= link_to pictures_path do %>
			             <i class="fa fa-camera fa-i text-change" aria-hidden="true">PICTURE</i>
			             <% end %>
			             </li>
			          </ul>
			        </li>
			        <% if user_signed_in? %>
				           <li>
				             <%= link_to edit_user_registration_path do%>
				             	<i class="fa fa-home fa-2x fa-fw text-change" aria-hidden="true"></i>
				             <% end %>
				           </li>
				           <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-out fa-2x text-change" aria-hidden="true"></i>
				           <% end %></li>
			        <% else %>
						   <li><%= link_to new_user_session_path do %><i class="fa fa-sign-in fa-2x text-change" aria-hidden="true"></i>
				           <% end %>
				           </li>
						   <li><%= link_to new_user_session_path do %><i class="fa fa-lg text-changeother" aria-hidden="true">UP</i>
				           <% end %></li>
					<% end %>
		        </ul>
		      </div><!-- /.navbar-collapse -->
		   </div><!-- /.container-fluid -->
		</nav>
		  </header>

<%= yield %>

</body>
</html>
